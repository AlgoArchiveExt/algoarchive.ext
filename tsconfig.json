{
  "compilerOptions": {
     "strict": true,
     "baseUrl": "./src",          // This sets the root directory for your imports.
     "paths": {
       "@/*": ["*"]               // This maps `@/` to the `src` directory
     },
     "module": "ES2022",
     "moduleResolution": "Node",
     "target": "ES2022",
     "esModuleInterop": true,
     "sourceMap": true,
     "rootDir": "src",
     "outDir": "dist/js",
     "noEmitOnError": true,
     "typeRoots": [ "node_modules/@types", "src/types" ]
    },
  "include": ["src", "src/types/types.d.ts"]
}