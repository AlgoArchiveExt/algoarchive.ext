{
  "compilerOptions": {
     "strict": true,
     "baseUrl": "./src",          // This sets the root directory for your imports.
     "paths": {
       "@/*": ["*"]               // This maps `@/` to the `src` directory
     },
     "module": "commonjs",
     "target": "es6",
     "esModuleInterop": true,
     "sourceMap": true,
     "rootDir": "src",
     "outDir": "dist/js",
     "noEmitOnError": true,
     "typeRoots": [ "node_modules/@types" ]
  }
}